<div class="container">
  <h1>Bookings</h1>

  <div class="mb-5">
    <h3>Crimes you've hired others to commit</h3>
    <div class="d-flex flex-wrap">
      <% @bookings.each do |booking| %>
        <div class="col-3 card p-2">
          <p>Crime: <%= link_to booking.crime.crime_type, booking_path(booking) %></p>
          <p>Target: <%= booking.target %></p>
          <%# Add a closing erb tag before the p closing tag when uncommenting %>
          <%# <p>Date: <%= booking.crime_date.strftime('%A, %d %b %Y %l:%M %p') </p> %>
          <p>Cost: $<%= booking.crime.price %></p>
          <p>Status: <%= booking.status %></p>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <div class="mb-5">
    <h3>Crimes you need to commit</h3>

    <div class="d-flex flex-wrap">
      <% @my_crime_bookings.each do |booking| %>
        <div class="col-3 card p-2">
          <p>Crime: <%= link_to booking.crime.crime_type, booking_path(booking) %></p>
          <p>Target: <%= booking.target %></p>
          <%# Add a closing erb tag before the p closing tag when uncommenting %>
          <%# <p>Date: <%= booking.crime_date.strftime('%A, %d %b %Y %l:%M %p') </p> %>
          <p>Cost: $<%= booking.crime.price %></p>
          <p>Status: <%= booking.status %></p>
          <% if booking.status == "pending" %>
            <%= link_to "approve",
              approve_booking_path(booking),
              class: "btn btn-outline-success"
            %>
            <%= link_to "reject",
              reject_booking_path(booking),
              class: "btn btn-outline-danger"
            %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
