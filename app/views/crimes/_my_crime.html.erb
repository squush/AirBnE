<div class="p-1 col-12 col-sm-6 col-md-4 col-lg-3">
  <%= link_to crime_path(crime), class: "text-decoration-none" do %>
    <div class="card p-2 border-danger d-flex text-primary justify-content-between card-rounded">
      <div class="mb-2">
        <h3 class="mb-2 text-danger crime-type">
          <%= "#{crime.crime_type}" %>
        </h3>
        <h5 class="my-1"><%= crime.user.username %></h5>
      </div>

      <p class="my-1"><%= crime.area %></p>
      <div class="d-flex justify-content-between p-2 text-warning card-smaller-text mb-3">
        <div class="d-flex flex-column align-items-start">
          <p class="m-0">Price</p>
          <p class="m-0"><strong>$<%= crime.price %></strong></p>
        </div>
        <div class="d-flex flex-column align-items-end">
          <p class="m-0">Experience</p>
          <p class="m-0"><strong><%= crime.years_experience %> years</strong></p>
        </div>
      </div>
      <div>
        <%= link_to "Edit", edit_crime_path(crime),
            class: "btn btn-sm btn-outline-primary mx-2" %>
        <%= link_to "Delete", crime_path(crime),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "btn btn-sm btn-outline-danger mx-2" %>
      </div>
    </div>
  <% end %>
</div>
