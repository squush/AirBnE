<div class="">
  <%= simple_form_for crime do |f| %>
    <%= f.input :crime_type %>
    <%= f.input :area,
      input_html: {
        data: {area_autocomplete_target: "area"},
        class: 'd-none'
      },
      wrapper_html: {
        data: {controller: "area-autocomplete",
        area_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}
      }
    %>
    <div class="d-flex justify-content-around">
      <div style="margin-right: 3px"><%= f.input :price %></div>
      <div style="margin-left: 3px"><%= f.input :years_experience %></div>
    </div>
    <%= f.button :submit, class:"btn btn-outline-success" %>
  <% end %>
</div>
