<%= simple_form_for crime do |f| %>
  <%= f.input :crime_type %>

  <%= f.input :area,
    input_html: {data: {area_autocomplete_target: "area"}},
    wrapper_html: {data: {controller: "area-autocomplete",
      area_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
  %>
  <%= f.input :price %>
  <%= f.input :years_experience %>
  <%= f.button :submit, class:"btn btn-success" %>
<% end %>
